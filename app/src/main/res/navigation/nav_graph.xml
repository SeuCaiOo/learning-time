<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_main">

    <fragment
        android:id="@+id/navigation_main"
        android:name="br.com.seucaio.learningtime.presentation.MainFragment"
        android:label="@string/title_main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_navigation_main_to_navigation_watchlist"
            app:destination="@id/navigation_watchlist" />

        <action
            android:id="@+id/action_navigation_main_to_navigation_favorites"
            app:destination="@id/navigation_favorites" />
        <action
            android:id="@+id/action_navigation_main_to_popularMoviesFragment"
            app:destination="@id/navigation_popular_movies" />
    </fragment>

    <fragment
        android:id="@+id/navigation_watchlist"
        android:name="br.com.seucaio.learningtime.presentation.watchlist.WatchlistFragment"
        android:label="@string/watchlist"
        tools:layout="@layout/fragment_watchlist" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="br.com.seucaio.learningtime.presentation.favorites.FavoritesFragment"
        android:label="@string/favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_popular_movies"
        android:name="br.com.seucaio.learningtime.presentation.popular.PopularMoviesFragment"
        android:label="@string/popular_movies"
        tools:layout="@layout/fragment_popular_movies" />

</navigation>